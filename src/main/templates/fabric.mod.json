{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "name": "${mod_name}",
  "version": "${mod_version}",
  "icon": "${mod_icon}",
  "description": "${mod_description}",
  "environment": "*",
  "contact": {
    "homepage" : "https://modrinth.com/mod/nitshas-fastbind",
    "issues": "https://github.com/Nitsha-M/Nitsha-s-FastBind/issues"
  },
  "entrypoints": {
    "main": [
      "com.nitsha.binds.loaders.fabric.Init"
    ],
    "modmenu": [
      "com.nitsha.binds.configs.ModMenuApiImpl"
    ]
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/${mod_id}",
        "modmenu.modrinth": "https://modrinth.com/mod/${mod_id}",
        "modmenu.discord": "https://discord.gg/zuwPkg5MHs"
      }
    }
  },
  "depends": {
    "fabricloader" : ">=${fabric_loader}",
    "minecraft": "${mod_versionRange}"
  },
  "recommends": {
    "modmenu": "*"
  }
